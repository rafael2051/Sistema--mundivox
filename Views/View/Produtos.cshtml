@model List<ProdutoModel>

@{
    ViewData["Title"] = "Lista de produtos";
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descrição</th>
            <th scope="col">Unidade</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (ProdutoModel produto in Model)
            {
                <tr>
                    <th scope="row">@produto.Id</th>
                    <td>@produto.descricao</td>
                    <td>@produto.unidade</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@produto.Id" asp-controller="Update" asp-action="EditarFornecedor">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@produto.Id" asp-controller="Delete" asp-action="Fornecedor">Deletar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
