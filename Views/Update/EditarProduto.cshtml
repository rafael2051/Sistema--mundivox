<div class="text-center">
    <h1 class="display-4">Cadastrar produto</h1>
</div>

<form>

    <div class="form-group">
        <label for="descricao">Razão social</label>
        <input type="text" class="form-control" placeholder="Descrição do produto">
    </div>

    <div class="form-group">
        <label for="unidade">Cnpj</label>
        <input type="text" class="form-control" placeholder="Unidade">
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Update" asp-action="Index" role="button">Voltar</a>
</form>
