@model ProdutoModel

<div class="text-center">
    <h1 class="display-4">Cadastrar produto</h1>
</div>

<form asp-controller="Register" asp-action="CriarProduto" method="post">

    <div class="form-group">
        <label for="descricao">Descrição do produto</label>
        <input type="text" asp-for="descricao" class="form-control" placeholder="Descrição do produto">
    </div>

    <div class="form-group">
        <label for="unidade">Unidade</label>
        <input type="text" asp-for="unidade" class="form-control" placeholder="Unidade">
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
    <a class="btn btn-secondary" asp-controller="Register" asp-action="Index" role="button">Voltar</a>
</form>
